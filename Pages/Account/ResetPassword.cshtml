@page
@model WebApplication1.Pages.Account.ResetPasswordModel

<h2>Reset Password</h2>
<p>Enter your new password below.</p>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Input.Token" />
    <input type="hidden" asp-for="Input.Email" />

    <div class="form-group">
        <label asp-for="Input.NewPassword"></label>
        <input type="password" asp-for="Input.NewPassword" class="form-control" />
        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Input.ConfirmPassword"></label>
        <input type="password" asp-for="Input.ConfirmPassword" class="form-control" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Reset Password</button>
</form>
